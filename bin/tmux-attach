#!/bin/sh

# start new tmux session
tmux new-session -d -s work
rc=$?
if [[ $rc == 0 ]] ; then
    # start bitlbee if not running
    if [ -z $(pidof bitlbee) ]; then
        bitlbee
    fi
    tmux move-window -s work:1 -t work:2
    tmux new-window -t work:1 -n 'vim' 'vim'
    tmux new-window -t work:9 -n 'irssi' 'irssi'
fi

tmux select-window -t work:1
tmux -2 attach-session -t work
